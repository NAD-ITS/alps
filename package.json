{
  "name": "alps-library",
  "version": "0.2.0",
  "private": false,
  "author": {
    "name": "General Conference of Seventh-day Adventists"
  },
  "contributors": [
    {
      "name": "Yauheni Kapliarchuk",
      "email": "yauheni.kapliarchuk@gmail.com",
      "url": "https://github.com/YauheniKapliarchuk"
    }
  ],
  "license": "SEE LICENSE IN LICENSE",
  "description": "React implementation of the Adventist Living Pattern System (ALPS)",
  "repository": {
    "type": "git",
    "url": "https://github.com/adventistchurch/alps.git",
    "directory": "/storybook"
  },
  "files": [
    "dist"
  ],
  "main": "dist/cjs",
  "module": "dist/esm",
  "dependencies": {
    "@storybook/addon-viewport": "^6.4.9",
    "@storybook/storybook-deployer": "^2.8.10",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-lazy-images": "^1.1.0",
    "react-scripts": "4.0.3",
    "sass": "^1.45.2",
    "typescript": "^4.5.4",
    "web-vitals": "^2.1.2"
  },
  "scripts": {
    "test": "react-scripts test",
    "storybook": "start-storybook -p 9001 -s ./public -c .storybook --ci",
    "build": "rollup --config",
    "dev": "rollup --config --watch",
    "deploy": "npm run-script build && npm publish",
    "deploy:patch": "npm version patch && npm run deploy",
    "deploy:minor": "npm version minor && npm run deploy",
    "deploy:major": "npm version major && npm run deploy",
    "build-storybook": "build-storybook -s public -o .storybook-build",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.2",
    "@rollup/plugin-typescript": "^8.3.0",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/node-logger": "^6.4.9",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.4.9",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "gh-pages": "^3.2.3",
    "rollup": "^2.62.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-scss": "^3.0.0",
    "storybook-addon-themes": "^6.1.0"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
